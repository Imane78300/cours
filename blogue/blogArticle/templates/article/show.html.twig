{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ article.Titre }}</td>
            </tr>
            <tr>
                <th>Resumé</th>
                <td>{{ article.resume }}</td>
            </tr>
            <tr>
                <th>User</th>
                <td>{{ article.user }}</td>
            </tr>
            <tr>
                <th>Image</th>
              <td><img width="20%" src="{{ asset('images/article/')}}{{ article.image}}" /></td>
            </tr>
            <tr>
                <th>Contenue</th>
                <td>{{ article.contenue }}</td>
            </tr>

            <tr>
                <th>CreatedAt </th>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d  H:i:s')}}</td>
            </tr>


        </tbody>
    </table>
    

<hr> 

<h3>Les Commentaire <h3>


